<!--            android:textColor="@color/gd2"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_alignParentRight="true"-->
<!--            tools:ignore="HardcodedText"/>-->
    </RelativeLayout>
</RelativeLayout>