<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layMain"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageButton
            android:id="@+id/totalbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_btn_shape"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:src="@drawable/ic_letter_t_24dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/totalbutton"
            android:text="Total"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="1dp"
            tools:ignore="HardcodedText" />
        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_refresh_24dp"
            android:background="@drawable/custom_btn_shape"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/refresh"
            android:text="New bill"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"/>
        <ImageButton
            android:id="@+id/scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_btn_shape"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:src="@drawable/ic_barcode"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scanner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Scan"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <TextView
            android:visibility="invisible"
            android:id="@+id/totaldisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="..."
            android:textSize="16sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText"/>

        <Button
            android:visibility="invisible"
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/pay_btn_shape"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_24dp"
            android:focusable="true"
            android:padding="2dp"
            android:text="Payment"
            android:textAllCaps="false"
            android:textColor="#D52E2E"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/change"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="remove item by click" />
    </RelativeLayout>
    <ListView
        android:background="@drawable/btn_shape4"
        android:visibility="visible"
        android:id="@+id/billinglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layEnd"
        android:layout_below="@id/layTop"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:padding="8dp" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/txtView"
        android:layout_below="@id/layTop"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        tools:ignore="HardcodedText" />
</RelativeLayout>